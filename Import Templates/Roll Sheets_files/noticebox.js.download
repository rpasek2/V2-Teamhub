function showNotice(text, msgtype, timeout) {
    /*
     * success
     * info
     * warning
     * danger
     */

    var type = "info";
    switch (msgtype) {
        case true:
        case "error":
        case "danger":
            type = "danger";
            break;
        case "info":
        case "notice":
            type = "info";
            break;
        case "warning":
            type = "warning";
            break;
        default:
            type = "success";
            break;
    }

    jQuery.notifyDefaults({
        newest_on_top: false,
        placement: {
            from: "bottom",
            align: "center"
        },
        z_index: 99999,
        delay: timeout ? timeout : 2500,
        mouse_over: 'pause',
        animate: {
            enter: 'animated bounceInUp',
            exit: 'animated fadeOut'
        },
        template:
        '<div data-notify="container" class="col-11 col-sm-4 growler alert alert-{0} no-print" role="alert">' +
            '<button type="button" aria-hidden="true" class="close" data-notify="dismiss"><span aria-hidden="true">&times;</span></button>' +
            '<span data-notify="message">{2}</span>' +
        '</div>'
    });

    jQuery.notify({ message: text }, { type: type });
}
